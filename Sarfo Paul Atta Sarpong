#include <iostream>
using namespace std;
int main()
{
    int a = 0;
    int i;
    int sum = 0;

    for(int i = 1; i <= 10000 ; i++)
        {
        if(i % 2 == 0)
        {
        sum = sum + i;
        a++;

        }

        }
        int average = sum / a;
        cout << endl << " The average will be " << average;


    return 0;
}
